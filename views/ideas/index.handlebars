<h1>Ideas here!</h1>
{{#each ideas}}
<div class="card card-body mb-2">
  <h2>{{title}}</h2>
  <p>{{details}}</p>
  <a href="/ideas/edit/{{id}}" class="btn btn-dark btn-block mb-3">Edit</a>
  <form action="/ideas/delete/{{id}}?_method=DELETE" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <button class="btn btn-danger btn-block" type="submit">DELETE</button>
  </form>
</div>
{{else}}
<div class="card card-body">
  You haven't jotted down any video ideas yet!
</div>
{{/each}}